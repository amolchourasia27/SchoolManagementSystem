

<div class="row pt-3 pd-2">
    <div class="col-6"><h1>Students</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/addstudent"><button type="button" class="btn btn-primary align-self-center">Add Student</button></a>
    </div>
</div>


<table class="table table-bordered">
    <thead class="thead-dark">

        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>
            <% rows.forEach(function(row){ %>     
        <tr>
            <th scope="row"><%= row.id %></th>
            <td><%= row.first_name %></td>
            <td><%= row.last_name %></td>
            <td><%= row.email %></td>
            <td><%= row.phone %></td>
            <td class="text-end">
                <a href="/editStudent/:<%= row.id %>" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
                <a href="<%= row.id %>" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
            </td>
        </tr>
        <% }) %> 
    </tbody>
</table>

